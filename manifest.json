{
  "manifest_version": 3,
  "name": "Playback Pilot",
  "version": "0.1.0",
  "description": "Hold Space to temporarily slow YouTube playback.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.youtube.com/embed/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "Slowdown Bar",
    "default_popup": "options.html"
  }
}
